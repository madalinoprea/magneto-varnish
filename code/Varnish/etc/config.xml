<?xml version="1.0"?>
<config>
    <modules>
        <Magneto_Varnish>
            <version>0.3.0</version>
        </Magneto_Varnish>
    </modules>
    <frontend>
        <routers>
            <varnish>
                <use>standard</use>
                <args>
                    <module>Magneto_Varnish</module>
                    <frontName>varnish</frontName>
                </args>
            </varnish>
        </routers>
    </frontend>
    <global>
        <models>
            <varnish>
                <class>Magneto_Varnish_Model</class>
                <resourceModel>varnish_mysql4</resourceModel>
            </varnish>
        </models>
        <helpers>
            <varnish>
                <class>Magneto_Varnish_Helper</class>
            </varnish>
        </helpers>
        <cache>
            <types>
                <varnish translate="label,description" module="varnish">
                    <label>Varnish</label>
                    <description>Full page cache in Varnish</description>
                    <tags></tags>
                </varnish>
            </types>
        </cache>
        <events>
            <http_response_send_before>
                <observers>
                    <varnish>
                        <type>singleton</type>
                        <class>varnish/observer</class>
                        <method>varnish</method>
                    </varnish>
                </observers>
            </http_response_send_before>
            <application_clean_cache>
                <observers>
                    <varnish>
                        <type>singleton</type>
                        <class>varnish/observer</class>
                        <method>purgeCache</method>
                    </varnish>
                </observers>
            </application_clean_cache>
            <!-- To check if category is in navigation to let admin users know that varnish cache needs 
            to be revalidated -->
            <catalog_category_save_commit_after>
                <observers>
                    <varnish>
                        <type>singleton</type>
                        <class>varnish/observer</class>
                        <method>onCategorySave</method>
                    </varnish>
                </observers>
            </catalog_category_save_commit_after>
        </events>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <varnish before="Mage_Adminhtml">Magneto_Varnish</varnish>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <default>
        <varnish>
            <server_options>
                <servers>127.0.0.1:80</servers>
            </server_options>
        </varnish>
    </default>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <varnish>
                            <title>Varnish</title>
                            <sort_order>10</sort_order>
                        </varnish>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <varnish>
                                            <title>Varnish Options</title>
                                        </varnish>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
